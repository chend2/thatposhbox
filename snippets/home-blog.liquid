{% if settings.display_blog_home %}	
<div class="main-blog">
  {% if settings.blog_title != blank %}
  	<div class="title">
        <h2>{{ settings.blog_title }}</h2>
    </div>
  {% endif %}
  {% if settings.blog_sub_title != blank %}
  	<div class="sub-title">
       {{ settings.blog_sub_title }}
    </div>
  {% endif %}
  
  
    <div class="box-content">
      <div id="latest-blogs" class="">

        {% for article in blogs.news.articles limit: 6 %}
        <div class="item">
          <div class="blog-item"> 
            <div class="blog-top">
              <h3 class="p10">{{ article.title | link_to: article.url }}</h3>
             
              
            </div>
           
          </div>
        </div>
        {% endfor %}

      </div>
    </div>

   </div>
{% endif %}